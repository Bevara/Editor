{
	"name": "bevara-access",
	"description": "Bevara extension to provide platform-independent support for data formats.",
	"version": "1.2.7",
	"publisher": "Bevara",
	"repository": "https://github.com/Bevara/Editor",
	"icon": "images/logo.png",
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"workspaceContains:.bevara"
	],
	"main": "./out/extension.js",
	"contributes": {
		"authentication": [
			{
				"id": "bevaraSessionToken",
				"label": "Bevara Token"
			}
		],
		"html": {
			"customData": [
				"./html.html-data.json"
			]
		},
		"languages": [
			{
				"id": "bvr",
				"aliases": [
					"Bevara Archive",
					"BVR"
				],
				"extensions": [
					".bvr"
				]
			},
			{
				"id": "accessor",
				"aliases": [
					"Accessor Archive"
				],
				"extensions": [
					".accessor"
				]
			}
		],
		"customEditors": [
			{
				"viewType": "bevara.pipeline",
				"displayName": "Open with Bevara viewer",
				"selector": [
					{
						"filenamePattern": "*.bmp"
					},
					{
						"filenamePattern": "*.jpg"
					},
					{
						"filenamePattern": "*.jpeg"
					},
					{
						"filenamePattern": "*.jp2"
					},
					{
						"filenamePattern": "*.mj2"
					},
					{
						"filenamePattern": "*.j2k"
					},
					{
						"filenamePattern": "*.jxl"
					},
					{
						"filenamePattern": "*.svg"
					},
					{
						"filenamePattern": "*.tif"
					},
					{
						"filenamePattern": "*.xps"
					},
					{
						"filenamePattern": "*.dxf"
					},
					{
						"filenamePattern": "*.cr2"
					},
					{
						"filenamePattern": "*.3fr"
					},
					{
						"filenamePattern": "*.aac"
					},
					{
						"filenamePattern": "*.ac3"
					},
					{
						"filenamePattern": "*.ogg"
					},
					{
						"filenamePattern": "*.amr"
					},
					{
						"filenamePattern": "*.flac"
					},
					{
						"filenamePattern": "*.mp3"
					},
					{
						"filenamePattern": "*.opus"
					},
					{
						"filenamePattern": "*.wma"
					},
					{
						"filenamePattern": "*.aiff"
					},
					{
						"filenamePattern": "*.aif"
					},
					{
						"filenamePattern": "*.aifc"
					},
					{
						"filenamePattern": "*.snd"
					},
					{
						"filenamePattern": "*.mp4"
					},
					{
						"filenamePattern": "*.wma"
					},
					{
						"filenamePattern": "*.pbm"
					},
					{
						"filenamePattern": "*.pnm"
					},
					{
						"filenamePattern": "*.pgm"
					},
					{
						"filenamePattern": "*.ppm"
					},
					{
						"filenamePattern": "*.rgb"
					},
					{
						"filenamePattern": "*.dng"
					},
					{
						"filenamePattern": "*.pcx"
					},
					{
						"filenamePattern": "*.cdr"
					},
					{
						"filenamePattern": "*.heif"
					},
					{
						"filenamePattern": "*.heic"
					},
					{
						"filenamePattern": "*.tga"
					},
					{
						"filenamePattern": "*.xcf"
					},
					{
						"filenamePattern": "*.xpm"
					},
					{
						"filenamePattern": "*.xv"
					},
					{
						"filenamePattern": "*.mp4"
					},
					{
						"filenamePattern": "*.mpg"
					},
					{
						"filenamePattern": "*.avi"
					},
					{
						"filenamePattern": "*.ogv"
					},
					{
						"filenamePattern": "*.png"
					},
					{
						"filenamePattern": "*.pdf"
					},
					{
						"filenamePattern": "*.cbz"
					},
					{
						"filenamePattern": "*.wav"
					}
				],
				"priority": "default"
			},
			{
				"viewType": "bevara.preserved",
				"displayName": "Open preserved file with Bevara",
				"selector": [
					{
						"filenamePattern": "*.bvr"
					}
				],
				"priority": "default"
			}
		],
		"commands": [
			{
				"command": "bevara.pipeline.new",
				"title": "Create new pipeline Document",
				"category": "Bevara"
			},
			{
				"command": "bevara.pipeline.mountBevFileSystem",
				"title": "Mount Bevara file"
			},
			{
				"command": "openBevResource",
				"title": "Open Bevara Resource"
			},
			{
				"command": "bevexplorer.exploreBevFile",
				"title": "Explore Bevara File"
			},
			{
				"command": "openBevResource",
				"title": "Open Bevara Resource"
			},
			{
				"command": "bevexplorer.clear",
				"title": "Clear explorer"
			},
			{
				"command": "extension.showBevaraCompiler",
				"title": "Show Bevara compiler"
			},
			{
				"command": "bevara-compiler.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "images/light/refresh.svg",
					"dark": "images/dark/refresh.svg"
				}
			},
			{
				"command": "bevara-compiler.actions.workflow.run.rerun",
				"category": "Bevara compiler",
				"title": "Rerun compilation",
				"when": "viewItem =~ /r_actions/ && viewItem =~ /rerunnable/"
			},
			{
				"command": "bevara-compiler.internal.workflow.run.rerun",
				"category": "Bevara compiler",
				"title": "Rerun compilation",
				"when": "viewItem =~ /r_internal/ && viewItem =~ /rerunnable/"
			},
			{
				"command": "bevara-compiler.actions.workflow.logs",
				"category": "Bevara compiler",
				"title": "View job logs",
				"when": "viewItem =~ /j_actions/",
				"icon": {
					"dark": "images/dark/logs.svg",
					"light": "images/light/logs.svg"
				}
			},
			{
				"command": "bevara-compiler.internal.workflow.logs",
				"category": "Bevara compiler",
				"title": "View build logs",
				"when": "viewItem =~ /j_internal/",
				"icon": {
					"dark": "images/dark/logs.svg",
					"light": "images/light/logs.svg"
				}
			},
			{
				"command": "bevara-compiler.actions.step.logs",
				"category": "Bevara compiler",
				"title": "View step logs",
				"when": "viewItem =~ /s_actions/",
				"icon": "$(globe)"
			},
			{
				"command": "bevara-compiler.internal.step.logs",
				"category": "Bevara compiler",
				"title": "View step logs",
				"when": "viewItem =~ /s_internal/",
				"icon": {
					"dark": "images/dark/logs.svg",
					"light": "images/light/logs.svg"
				}
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId == zip",
					"command": "bevara.pipeline.mountBevFileSystem",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == accessor",
					"command": "bevexplorer.exploreBevFile",
					"group": "access"
				}
			],
			"view/title": [
				{
					"command": "bevexplorer.clear",
					"when": "view == bevExplorer"
				},
				{
					"command": "bevara-compiler.refreshEntry",
					"when": "view == bevara-compiler.compiler",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "bevara-compiler.actions.workflow.run.rerun",
					"when": "viewItem =~ /r_actions/ && viewItem =~ /rerunnable/"
				},
				{
					"command": "bevara-compiler.internal.workflow.run.rerun",
					"when": "viewItem =~ /r_internal/ && viewItem =~ /rerunnable/"
				},
				{
					"command": "bevara-compiler.actions.workflow.logs",
					"group": "inline",
					"when": "viewItem =~ /j_actions/ && viewItem =~ /completed/"
				},
				{
					"command": "bevara-compiler.internal.workflow.logs",
					"group": "inline",
					"when": "viewItem =~ /j_internal/ && viewItem =~ /completed/"
				},
				{
					"command": "bevara-compiler.actions.step.logs",
					"group": "inline",
					"when": "viewItem =~ /s_actions/ && viewItem =~ /completed/"
				},
				{
					"command": "bevara-compiler.internal.step.logs",
					"group": "inline",
					"when": "viewItem =~ /s_internal/ && viewItem =~ /completed/"
				}
			],
			"commandPalette": [
				{
					"command": "bevara-compiler.actions.workflow.run.rerun",
					"when": "false"
				},
				{
					"command": "bevara-compiler.internal.workflow.run.rerun",
					"when": "false"
				},
				{
					"command": "bevara-compiler.actions.workflow.logs",
					"when": "false"
				},
				{
					"command": "bevara-compiler.internal.workflow.logs",
					"when": "false"
				},
				{
					"command": "bevara-compiler.actions.step.logs",
					"when": "false"
				},
				{
					"command": "bevara-compiler.internal.step.logs",
					"when": "false"
				}
			]
		},
		"views": {
			"bevara-sdk": [
				{
					"id": "bevara-compiler.compiler",
					"name": "Bevara Compiler",
					"icon": "images/BEVARA_B_COLOR-BLUE.svg",
					"contextualTitle": "Bevara Compiler",
					"when": "showSDK"
				},
				{
					"type": "webview",
					"id": "bevara-compiler.actions",
					"name": "Bevara Actions",
					"icon": "images/BEVARA_B_COLOR-BLUE.svg",
					"contextualTitle": "Bevara Actions",
					"when": "showSDK"
				},
				{
					"id": "bevara-compiler.settings",
					"name": "Bevara Settings",
					"icon": "images/BEVARA_B_COLOR-BLUE.svg",
					"contextualTitle": "Bevara Settings",
					"when": "showSDK"
				}
			],
			"explorer": [
				{
					"id": "bevExplorer",
					"name": "Bevara Explorer"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "bevExplorer",
				"contents": "No accessors has been opened yet [learn more](https://bevara.com/).\n[View accessors](command:bevara.pipeline.new)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "bevara-sdk",
					"title": "Bevara SDK",
					"icon": "images/BEVARA_B_COLOR-BLUE.svg"
				}
			]
		}
	},
	"scripts": {
		"install:all": "npm install && git submodule init && git submodule update && cd Interface && ./configure && npm run build:webview",
		"start:webview": "cd Interface && npm run start",
		"build:webview": "cd Interface && npm run build:components && npm run build:vscode",
		"build:webview-debug": "cd Interface && npm run build:components && npm run build:vscode-debug",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.5.5",
		"@types/ini": "^4.1.1",
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"@octokit/rest": "^18.0.0",
		"@types/git": "^0.0.21",
		"@types/jszip": "^3.4.1",
		"adm-zip": "^0.5.10",
		"axios": "^1.6.2",
		"https": "^1.0.0",
		"ini": "^4.1.3",
		"jszip": "^3.10.1",
		"lodash.groupby": "^4.6.0",
		"path.join": "^1.0.0",
		"peg-cmake": "^0.0.8",
		"ssh-config": "^5.0.0",
		"vsce": "^2.15.0",
		"vscode-uri": "^3.0.7"
	}
}