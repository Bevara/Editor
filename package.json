{
	"name": "bevara-access",
	"description": "This is a helper plugins for designing and debugging web assembly decoders.",
	"version": "0.0.11",
	"publisher": "Bevara",
	"repository": "https://github.com/Bevara/editor-vscode",
	"icon": "images/logo.png",
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"html": {
			"customData": [
				"./html.html-data.json"
			]
		},
		"languages": [
            {
                "id": "bvr",
                "aliases": [
                    "Bevara Archive",
                    "BVR"
                ],
                "extensions": [
                    ".bvr"
                ]
            }
        ],
		"customEditors": [
			{
				"viewType": "bevara.pipeline",
				"displayName": "Open with Bevara viewer",
				"selector": [
					{
						"filenamePattern": "*.bmp"
					},
					{
						"filenamePattern": "*.jpg"
					},
					{
						"filenamePattern": "*.jp2"
					},
					{
						"filenamePattern": "*.j2k"
					},
					{
						"filenamePattern": "*.jxl"
					},
					{
						"filenamePattern": "*.svg"
					},
					{
						"filenamePattern": "*.tif"
					},
					{
						"filenamePattern": "*.xps"
					},
					{
						"filenamePattern": "*.dxf"
					},
					{
						"filenamePattern": "*.cr2"
					},
					{
						"filenamePattern": "*.3fr"
					},
					{
						"filenamePattern": "*.aac"
					},
					{
						"filenamePattern": "*.ac3"
					},
					{
						"filenamePattern": "*.ogg"
					},
					{
						"filenamePattern": "*.amr"
					},
					{
						"filenamePattern": "*.flac"
					},
					{
						"filenamePattern": "*.mp3"
					},
					{
						"filenamePattern": "*.opus"
					},
					{
						"filenamePattern": "*.wma"
					},
					{
						"filenamePattern": "*.aiff"
					},
					{
						"filenamePattern": "*.aif"
					},
					{
						"filenamePattern": "*.aifc"
					},
					{
						"filenamePattern": "*.snd"
					},
					{
						"filenamePattern": "*.mp4"
					},
					{
						"filenamePattern": "*.wma"
					},
					{
						"filenamePattern": "*.pbm"
					},
					{
						"filenamePattern": "*.pnm"
					},
					{
						"filenamePattern": "*.pgm"
					},
					{
						"filenamePattern": "*.ppm"
					},
					{
						"filenamePattern": "*.rgb"
					},
					{
						"filenamePattern": "*.dng"
					},
					{
						"filenamePattern": "*.pcx"
					},
					{
						"filenamePattern": "*.cdr"
					},
					{
						"filenamePattern": "*.heif"
					},
					{
						"filenamePattern": "*.tga"
					},
					{
						"filenamePattern": "*.xcf"
					},
					{
						"filenamePattern": "*.xpm"
					},
					{
						"filenamePattern": "*.xv"
					},
					{
						"filenamePattern": "*.mp4"
					},
					{
						"filenamePattern": "*.mpg"
					},
					{
						"filenamePattern": "*.avi"
					},
					{
						"filenamePattern": "*.ogv"
					}
				],
				"priority": "default"
			},
			{
				"viewType": "bevara.preserved",
				"displayName": "Open preserved file with Bevara",
				"selector": [
					{
						"filenamePattern": "*.bvr"
					}
				],
				"priority": "default"
			}
		],
		"commands": [
			{
				"command": "bevara.pipeline.new",
				"title": "Create new pipeline Document",
				"category": "Bevara"
			},
			{
                "command": "bevara.pipeline.mountBevFileSystem",
                "title": "Mount Bevara file"
            }
		],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == zip",
                    "command": "bevara.pipeline.mountBevFileSystem",
                    "group": "navigation"
                }
            ]
        }
	},
	"scripts": {
		"install:all": "npm install && git submodule init && git submodule update && cd Interface && ./configure && npm run build:webview",
		"start:webview": "cd Interface && npm run start",
		"build:webview": "cd Interface && npm run build:vscode",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"@types/jszip": "^3.4.1",
		"jszip": "^3.10.1",
		"vscode-uri": "^3.0.7"
	}
}
