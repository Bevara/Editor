{
	"name": "bevara-code-editor",
	"description": "This is a helper plugins for designing and debugging bevara decoders.",
	"version": "0.0.2",
	"publisher": "Bevara",
	"repository": "https://github.com/Bevara/editor-vscode",
	"icon": "images/logo.png",
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"html": {
			"customData": [
				"./html.html-data.json"
			]
		},
		"languages": [
            {
                "id": "bev",
                "aliases": [
                    "Bevara Archive",
                    "BEV"
                ],
                "extensions": [
                    ".bev"
                ]
            }
        ],
		"customEditors": [
			{
				"viewType": "bevara.pipeline",
				"displayName": "Open with Bevara viewer",
				"selector": [
					{
						"filenamePattern": "*.jp2"
					},
					{
						"filenamePattern": "*.jxl"
					},
					{
						"filenamePattern": "*.tif"
					},
					{
						"filenamePattern": "*.cr2"
					},
					{
						"filenamePattern": "*.3fr"
					},
					{
						"filenamePattern": "*.ac3"
					},
					{
						"filenamePattern": "*.amr"
					},
					{
						"filenamePattern": "*.flac"
					},
					{
						"filenamePattern": "*.mp3"
					},
					{
						"filenamePattern": "*.opus"
					},
					{
						"filenamePattern": "*.wma"
					}
				],
				"priority": "default"
			},
			{
				"viewType": "bevara.preserved",
				"displayName": "Open preserved file with Bevara",
				"selector": [
					{
						"filenamePattern": "*.bev"
					}
				],
				"priority": "default"
			}
		],
		"commands": [
			{
				"command": "bevara.pipeline.new",
				"title": "Create new pipeline Document",
				"category": "Bevara"
			},
			{
                "command": "bevara.pipeline.mountBevFileSystem",
                "title": "Mount Bevara file"
            }
		],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == zip",
                    "command": "bevara.pipeline.mountBevFileSystem",
                    "group": "navigation"
                }
            ]
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"@types/jszip": "^3.4.1",
		"jszip": "^3.10.1",
		"vscode-uri": "^3.0.7"
	}
}
